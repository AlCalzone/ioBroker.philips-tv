{
    "compileOnSave": true,          // Automatically build files in Visual Studio (Code), in combination with the watch option
    "compilerOptions": {
        "declaration": true,        // emit d.ts files
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,     // dont compile faulty code
        "noImplicitAny": false,     // set to true for stricter type checking
        "outDir": "build/",
        "removeComments": false,

        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        
        "jsx": "react",
        
        "sourceMap": false,
        "inlineSourceMap": false,
        //"sourceRoot": "src/",
        "target": "es5",
        "lib": [
            "es6",
            "dom" // <= necessary to get rid of @types/jquery errors
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*.d.ts",
        "admin/**/*.ts",
        "src/**/*.test.ts"
    ]
}
