{
  "name": "iobroker.philips-tv",
  "version": "0.2.0",
  "description": "ioBroker adapter to control Philips TVs over the network",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "contributors": [
    {
      "name": "AlCalzone",
      "email": "d.griesel@gmx.net"
    }
  ],
  "homepage": "https://github.com/AlCalzone/ioBroker.philips-tv",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "template",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AlCalzone/ioBroker.philips-tv"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^1.0.3",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "@iobroker/testing": "^1.2.0",
    "@types/chai": "^4.0.6",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "@types/request": "^2.0.8",
    "@types/request-promise-native": "^1.0.10",
    "@types/sinon": "^7.0.11",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^6.1.4",
    "node-ssh": "^6.0.0",
    "nyc": "^14.1.0",
    "semver": "^6.0.0",
    "sinon": "^7.3.2",
    "source-map-support": "^0.5.0",
    "ts-loader": "^6.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0"
  },
  "main": "build/main.js",
  "scripts": {
    "test:ts": "mocha --opts test/mocha.custom.opts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "prepublishOnly": "npm run test:package",
    "coverage": "node node_modules/nyc/bin/nyc npm run test",
    "lint:ts": "tslint",
    "lint": "npm run lint:ts \"src/**/*.ts\"",
    "deploy_local": "node --require ts-node/register maintenance/deploy_local.ts",
    "bump": "node --require ts-node/register maintenance/bump_version.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/ioBroker.philips-tv/issues"
  },
  "readmeFilename": "README.md"
}
