{
  "name": "iobroker.philips-tv",
  "version": "0.2.0",
  "description": "ioBroker adapter to control Philips TVs over the network",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "contributors": [
    {
      "name": "AlCalzone",
      "email": "d.griesel@gmx.net"
    }
  ],
  "homepage": "https://github.com/AlCalzone/ioBroker.philips-tv",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "template",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AlCalzone/ioBroker.philips-tv"
  },
  "dependencies": {
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "@iobroker/adapter-core": "^1.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.0.6",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.12.0",
    "@types/request": "^2.0.8",
    "@types/request-promise-native": "^1.0.10",
    "@types/sinon": "^7.0.10",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^6.0.2",
    "node-ssh": "^5.0.0",
    "nyc": "^13.3.0",
    "semver": "^6.0.0",
    "sinon": "^7.3.1",
    "source-map-support": "^0.5.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tslint": "^5.8.0",
    "typescript": "^3.3.4000",
    "webpack": "^4.29.6"
  },
  "main": "build/main.js",
  "scripts": {
    "test:js": "node node_modules/mocha/bin/mocha test/test*.js",
    "test:ts": "node node_modules/mocha/bin/mocha --require ts-node/register --require source-map-support/register src/**/*.test.ts",
    "test:package": "node node_modules/mocha/bin/mocha test/testPackageFiles.js",
    "test": "npm run test:ts",
    "prepublishOnly": "npm run test:package",
    "coverage": "node node_modules/nyc/bin/nyc npm run test",
    "lint:ts": "tslint",
    "lint": "npm run lint:ts \"src/**/*.ts\"",
    "deploy_local": "node --require ts-node/register maintenance/deploy_local.ts",
    "bump": "node --require ts-node/register maintenance/bump_version.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/ioBroker.philips-tv/issues"
  },
  "readmeFilename": "README.md"
}