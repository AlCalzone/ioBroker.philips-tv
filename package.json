{
  "name": "iobroker.philips-tv",
  "version": "0.2.0",
  "description": "ioBroker adapter to control Philips TVs over the network",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "contributors": [
    {
      "name": "AlCalzone",
      "email": "d.griesel@gmx.net"
    }
  ],
  "homepage": "https://github.com/AlCalzone/ioBroker.philips-tv",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "template",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AlCalzone/ioBroker.philips-tv"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.0.0",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.9"
  },
  "devDependencies": {
    "@iobroker/testing": "^2.4.2",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.1.1",
    "@types/request": "^2.48.5",
    "@types/request-promise-native": "^1.0.10",
    "@types/sinon": "^9.0.10",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^7.0.0",
    "node-ssh": "^8.0.0",
    "nyc": "^15.1.0",
    "semver": "^7.3.4",
    "sinon": "^9.2.4",
    "source-map-support": "^0.5.19",
    "ts-loader": "^8.0.17",
    "ts-node": "^8.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5",
    "webpack": "^4.44.2"
  },
  "main": "build/main.js",
  "scripts": {
    "test:ts": "mocha --opts test/mocha.custom.opts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "prepublishOnly": "npm run test:package",
    "coverage": "node node_modules/nyc/bin/nyc npm run test",
    "lint:ts": "tslint",
    "lint": "npm run lint:ts \"src/**/*.ts\"",
    "deploy_local": "node --require ts-node/register maintenance/deploy_local.ts",
    "bump": "node --require ts-node/register maintenance/bump_version.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/ioBroker.philips-tv/issues"
  },
  "readmeFilename": "README.md"
}
