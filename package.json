    }
  ],
  "homepage": "https://github.com/AlCalzone/ioBroker.philips-tv",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "template",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AlCalzone/ioBroker.philips-tv"
  },
  "dependencies": {
    "buffer-v6-polyfill": "^1.0.5",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^2.2.48",
    "@types/node": "^4.2.23",
    "@types/jquery": "^1.10.33",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "@types/request": "^2.47.0",
    "@types/request-promise-native": "^1.0.13",
    "@types/sinon": "^4.1.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "jquery": "1.11.1",
    "jsdom": "^11.5.1",
    "mocha": "^5.0.0",
    "node-ssh": "^5.1.0",
    "nyc": "^11.4.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "html-webpack-plugin": "^2.30.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "semver": "^5.5.0",
    "sinon": "^4.2.2",
    "source-map-support": "^0.5.3",
    "ts-loader": "^3.4.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-react": "^3.4.0",
    "typescript": "^2.7.1",
    "webpack": "^3.10.0"
  },
  "main": "build/main.js",
  "scripts": {
    "build:webpack": "webpack --config webpack.config.js",
    "build": "npm run build:webpack",
    "watch": "webpack --config webpack.config.js --watch --progress",
    "test:js": "node node_modules/mocha/bin/mocha test/test*.js",
    "test:ts": "node node_modules/mocha/bin/mocha --require ts-node/register --require source-map-support/register src/**/*.test.ts",
    "test:tsx": "node node_modules/mocha/bin/mocha --require test/setupJSDom.js --require ts-node/register --require source-map-support/register **/src/**/*.test.tsx",
    "test:package": "node node_modules/mocha/bin/mocha test/testPackageFiles.js",
    "test": "npm run test:ts && npm run test:tsx && npm run test:js",
    "prepublishOnly": "npm run test:package",
    "coverage": "node node_modules/nyc/bin/nyc npm run test",
    "lint:ts": "tslint",
    "lint": "npm run lint:ts \"src/**/*.ts\"",
    "deploy_local": "node --require ts-node/register maintenance/deploy_local.ts",
    "bump": "node --require ts-node/register maintenance/bump_version.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "admin/src/**/*.ts*"
    ],
    "exclude": [
      "src/**/*.test.ts*",
      "admin/src/**/*.test.ts*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/ioBroker.philips-tv/issues"
  },
  "readmeFilename": "README.md"
}
